<% layout("/layouts/boilerplate") %>
  <body>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" >
      <div class="col-8">
      <div class="mb-3">
        
      <label for="Title" class="form-label">Title:</label>
      <input name="listing[title]" placeholder="enter title" type="text" class ="form-control" required />
      <div class="invalid-feedback">Please enter a valid title</div>
    </div>
      <br /><br />
      <div>
      <label for="Description" class="form-label">Description:</label>
      <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter a valid description</div>
      </div>
      
      <br /><br />
      <div>
      <label for="Image" class="form-label">Image URL:</label>

      <input
        name="listing[image]"
        placeholder="Enter image URL"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a valid image URL</div>
      </div>
      <div>
        <label for="Price" class="form-label">Price:</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required />
        <div class="invalid-feedback">Please enter a valid price</div>
      <br /><br />
      </div>
      <div class="col-8">

      <label for="Country" class="form-label">Country:</label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control"  required/>
      <div class="invalid-feedback">Please enter a valid country</div>
      <br /><br />
    </div>
    
      <div class="col-8">
        <label for="Location" class="form-label">Location:</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text" class="form-control" required
      />
      <div class="invalid-feedback">Please enter a valid location</div>
      </div>
      
      <br /><br />
      <button>Add</button>
      </div>
    </form>
  </body>
